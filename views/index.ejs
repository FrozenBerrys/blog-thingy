<div class="author">
    <h1 class="author__heading">Hi, I'm FrozenBerrys.</h1>
    <p class="author__body">Learning Web Development, Amateur Pianist</p>
</div>

<img src="/img/nebula.jpg" alt="nebula" class="nebula-image" width="600">

<section class="articles">
    <h2 class="articles__heading">Latest Posts</h2>

    <ul class="article-ul">
        <!-- loops through "data" -->
        <% data.forEach(post => { %> 
            <li>
                <a href="/post/<%= post._id %>"> 
                    <span><%= post.title %></span>
                    <span class="article-list__date"><%= post.createdAt.toDateString() %></span>

                </a> 
            </li>
        <% }) %>


    </ul>

    <!-- PAGINATION  -->
    <!-- <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
    <% } %> -->


</section>